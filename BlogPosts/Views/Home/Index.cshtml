@model HomeViewModel



            <!-- Page Content -->
            <div class="container">

                <div class="row">

                    <!-- Blog Entries Column -->
                    <div class="col-md-8">

                        <h1 class="my-4">
                            LIT Blog
                            <small>Nothing to see here...</small>
                        </h1>
                        @foreach (BlogPost b in Model.BlogPosts)
            {
                <div class="card mb-4">
                    <div class="card-body">
                        <h2 class="card-title">
                            <a style="text-decoration:none;" href="/home/viewblog?id=@b.Id">@b.Title</a>
                        </h2>
                        <p class="card-text">@b.Text</p>
                        <a href="/home/viewblog?id=@b.Id" class="btn btn-primary">Read More &rarr;</a>
                    </div>
                    <div class="card-footer text-muted">
                        Posted on @b.DatePosted.ToLongDateString() by
                       @b.Name
                    </div>
                </div>
            }
        </div>
    </div > 
</div>